{
  "name": "mijin",
  "homepage": "https://github.com/lecoueyl/mijin",
  "description": "Tailwind CSS UI components for Vue.js",
  "version": "1.0.0",
  "author": "Leonard Lecouey <leonard.lecouey@gmail.com>",
  "main": "dist/mijin.umd.js",
  "module": "dist/mijin.umd.js",
  "unpkg": "dist/mijin.umd.js",
  "jsdelivr": "dist/mijin.umd.js",
  "license": "MIT",
  "keywords": [
    "tailwindcss",
    "vue",
    "components"
  ],
  "files": [
    "dist/*.js"
  ],
  "private": false,
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "build": "npm run build:vue && npm run build:tailwind",
    "build:vue": "vue-cli-service build src/index.js --target lib --name mijin",
    "build:tailwind": "rimraf dist/tailwind-preset.js && rollup --config rollup.config.js",
    "test": "npm run test:unit",
    "test:unit": "vue-cli-service test:unit",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@vue/cli-plugin-babel": "^4.5.11",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-plugin-unit-jest": "^4.5.11",
    "@vue/cli-service": "^4.5.11",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/test-utils": "^1.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-vue": "^7.5.0",
    "feather-icons": "^4.28.0",
    "husky": "^5.0.6",
    "pinst": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "semantic-release": "^17.3.7",
    "tailwindcss": "^2.0.2",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lecoueyl/mijin.git"
  },
  "dependencies": {
    "mijin": "^1.0.0"
  }
}
